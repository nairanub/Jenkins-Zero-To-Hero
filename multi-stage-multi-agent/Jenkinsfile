pipeline {
  agent any
  stages {
    stage('Back-end') {
      agent {
        docker { image 'maven:3.8.1-adoptopenjdk-11' }
        
      }
      steps {
        sh 'mvn --version'
        sh 'echo this is my backend stage'
      }
    }

    stage('Front-end') {
      agent {
        docker { image 'node:16-alpine' }
      }
      steps {
        sh 'node --version'
        sh 'echo this is my frontend-stage'
      }
    }

    stage('Database') {
      agent {
        docker { image 'mysql:latest' }
      }
      steps {
        sh 'mysql --version'
        sh 'echo hello database'
      }
    }
  }
}
