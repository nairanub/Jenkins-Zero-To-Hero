pipeline {
  agent any
  stages {
    stage('Back-end') {
      agent {
        docker { image 'maven:3.8.1-adoptopenjdk-11' }
      }
      steps {
        sh 'mvn --version'
      }
    }
    stage('Front-end') {
      agent {
        docker { image 'node:16-alpine' }
      }
      steps {
        sh 'node --version'
      }
      stage('Database') {
      agent {
        docker { image 'mysql:lates' }
      }
      steps {
        sh 'select * from dual'
      }
    }
  }
}
